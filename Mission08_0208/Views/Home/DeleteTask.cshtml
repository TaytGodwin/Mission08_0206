@model Mission08_0208.Models.Task
@{
    ViewBag.Title = "Delete";
}

<h2>This page will confirm deletes for tasks </h2>

@* This will contain all the pieces of info to delete for the individual task  *@

@* The website needs to use the Bootstrap Grid system on all pages. *@

<div class="row">
    <div class="col-md-8 col-md-offset-2">

        <h2>@Model.TaskName</h2>
        <p><strong>Due Date:</strong> @Model.DueDate</p>
        <p><strong>Category</strong> @Model.Category?.CategoryName</p>
        @{
            string quadrantText = "";
            switch (Model.Quadrant)
            {
                case 1:
                    quadrantText = "Quadrant I : Important / Urgent";
                    break;
                case 2:
                    quadrantText = "Quadrant II : Important / Not Urgent";
                    break;
                case 3:
                    quadrantText = "Quadrant II : Not Important / Urgent";
                    break;
                case 4:
                    quadrantText = "Quadrant IV : Not Important / Not Urgent";
                    break;
                default:
                    quadrantText = "Unknown Quadrant";
                    break;
            }
        }
        <p><strong>Quadrant:</strong> @quadrantText</p>
        <p><strong>Completed: </strong> @(Model.Completed ? "Yes" : "No")</p>

    </div>
    <h3>Are you sure you want to delete this Task?</h3>

    <form asp-action="DeleteTask" method="post">
        <input type="hidden" name="TaskId" value="@Model.TaskId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>


    
