@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Mission08_0208.Models.Task>

<div class="container">
    <div class="row">
        
        
        <div class="col-6">
            <!-- Quadrant I: Important/Urgent -->
            <div class="row mb-4">
                <!-- Title Row -->
                <div class="col-12 mb-3">
                    <h2 class="text-center">Quadrant I: Important/Urgent</h2>
                </div>

                <!-- Task Cards for Quadrant I -->
                @foreach (var task in Model.Where(t => t.Quadrant == 1))
                {
                    <div class="card mb-3 w-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- Due Date Column (3 Columns Wide) -->
                                <div class="col-md-3">
                                    <p class="mb-0"><strong>Due Date:</strong> @task.DueDate</p>
                                </div>
                                <!-- Task Info and Completed Column (5 Columns Wide) -->
                                <div class="col-md-5">
                                    <p class="mb-0"><strong>Task:</strong> @task.TaskName</p>
                                    <p class="mb-0"><strong>Completed:</strong> @(task.Completed ? "Yes" : "No")</p>
                                </div>
                                <!-- Buttons Column (4 Columns Wide) -->
                                <div class="col-md-4">
                                    <div class="btn-group" role="group">

                                        <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-Id="@task.TaskId" class="btn btn-danger btn-sm">Delete</a></td>
                                        
                                        <td><a asp-controller="Home" asp-action="EditTask" asp-route-Id="@task.TaskId" class="btn btn-info btn-sm">Edit</a></td>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Any(t => t.Quadrant == 1))
                {
                    <div class="col-12">
                        <p class="mb-0">No tasks available...</p>
                    </div>
                }
            </div>




        </div>

